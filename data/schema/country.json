{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/country-collectio.schema.json",
  "title": "Country Collectio Schema",
  "type": "object",
  "required": ["meta", "identity", "definition", "statistics", "works", "footer"],
  "additionalProperties": false,
  "properties": {
    "meta": {
      "type": "object",
      "required": ["title", "flagEmoji", "breadcrumbName"],
      "additionalProperties": false,
      "properties": {
        "title": { "type": "string", "minLength": 1 },
        "flagEmoji": { "type": "string", "minLength": 1 },
        "breadcrumbName": { "type": "string", "minLength": 1 }
      }
    },
    "identity": {
      "type": "object",
      "required": ["category", "name", "nativeName", "tags"],
      "additionalProperties": false,
      "properties": {
        "category": { "type": "string", "minLength": 1 },
        "name": { "type": "string", "minLength": 1 },
        "nativeName": { "type": "string", "minLength": 1 },
        "tags": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "minItems": 1,
          "uniqueItems": true
        }
      }
    },
    "definition": {
      "type": "object",
      "required": ["text"],
      "additionalProperties": false,
      "properties": {
        "text": { "type": "string", "minLength": 1 }
      }
    },
    "statistics": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "value", "label", "hasIndicator"],
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "value": { "type": "string", "minLength": 1 },
          "label": { "type": "string", "minLength": 1 },
          "hasIndicator": { "type": "boolean" },
          "indicatorValue": {
            "type": "number"
          }
        },
        "allOf": [
          {
            "if": {
              "properties": { "hasIndicator": { "const": true } }
            },
            "then": {
              "required": ["indicatorValue"]
            }
          },
          {
            "if": {
              "properties": { "hasIndicator": { "const": false } }
            },
            "then": {
              "not": {
                "required": ["indicatorValue"]
              }
            }
          }
        ]
      }
    },
    "works": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "type", "status", "title", "description", "link"],
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "type": {
            "type": "string",
            "enum": ["Temporal", "Spatial", "Network"]
          },
          "status": {
            "type": "string",
            "enum": ["active", "pending", "archived"]
          },
          "title": { "type": "string", "minLength": 1 },
          "description": { "type": "string", "minLength": 1 },
          "link": {
            "type": ["string", "null"],
            "minLength": 1
          }
        }
      }
    },
    "footer": {
      "type": "object",
      "required": ["entityCode", "region", "lastRevised", "links"],
      "additionalProperties": false,
      "properties": {
        "entityCode": { "type": "string", "minLength": 1 },
        "region": { "type": "string", "minLength": 1 },
        "lastRevised": {
          "type": "string",
          "format": "date"
        },
        "links": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["label", "href"],
            "additionalProperties": false,
            "properties": {
              "label": { "type": "string", "minLength": 1 },
              "href": { "type": "string", "minLength": 1 }
            }
          }
        }
      }
    }
  }
}